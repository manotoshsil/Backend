</ul>
-->

                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="hidden">questionId</th>
                                    <th>Question</th>
                                    <th>Type</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody id="indiv-questions">


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">New Question</h4>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <form class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label for="question-text" class="col-lg-2 control-label">Question Text</label>
                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="question-text" placeholder="Type Question text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="question-type" class="col-lg-2 control-label">Question Type</label>
                                    <div class="col-lg-10">
                                        <div class="radio">
                                            <label>
                                                <input type="radio" value="1" checked name="questiontype">Yes/No</label>
                                        </div>
                                        <div class="radio">
                                            <label>
                                                <input type="radio" value="2" name="questiontype">Free Text</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" id="save-question" class="btn btn-primary" data-dismiss="modal">Save</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>

        </div>

        <!-- Add Page  -->
        <div id="myModal1" class="modal fade" role="dialog">
