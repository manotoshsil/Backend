                                    <div class="col-lg-10">
                                        <input type="text" class="form-control" id="page-name" placeholder="Type Page Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="page-order" class="col-lg-2 control-label ">Page Order</label>
                                    <div class="col-lg-2 ">
