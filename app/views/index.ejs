            <!--- Page content-->
            <div class="panel panel-default hidden" id="page-detail-panel">
                <div class="panel-heading">
                    Pages :: - <span id="selected-pageid" style="font-weight:bolder;"></span>

                </div>
                <div class="panel-body">
                    <div class="container-fluid">
                        <div class="row" style="background-color:#F0F4FB;">
                            <div class="col-md-4">Add Question</div>
                            <div class="col-md-1"> <i id="add-question" class="fa fa-plus-circle fa-2x" style="color:#67CEF2; cursor:pointer;" data-toggle="modal" data-target="#myModal"></i>
                                <!-- <button type="button" class="fa fa-plus-circle fa-2x" data-toggle="modal" data-target="#myModal"></button> -->
                            </div>
                        </div>
